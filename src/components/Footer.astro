---
import datos from '@/data/data.json';

import { Icon } from 'astro-icon/components';
import CustomSeparator from './CustomSeparator.astro';
---

<footer class="w-full max-w-7xl flex flex-col gap-4 p-6">
  <CustomSeparator class="text-accent max-w-7xl" />
  <section class="flex flex-col sm:flex-row justify-between">
    <div class="flex flex-col gap-2 justify-center opacity-50">
      <p>Â© 2024 {datos.pageTitle}.</p>
      <p class="gap-x-1 flex sm:items-center">
        <span>Powered by</span>
        <span class="flex gap-1 items-center">
          Astro
          <Icon name="tabler:rocket" />
        </span>

        <span class="flex gap-1 items-center">
          React
          <Icon name="tabler:brand-react" />
        </span>
      </p>
    </div>
    <div class="flex flex-col gap-2 justify-center sm:items-center">
      <p class="opacity-50">
        {datos.updated}
      </p>
      <a
        class="size-fit flex gap-1 items-center px-2 py-1 border-2 border-white opacity-50 rounded-full cursor-pointer hover:text-accent hover:border-current hover:opacity-100 hover:scale-105 active:scale-100 transition duration-200"
        href={datos.links.repo.url}
        target="_blank"
        rel="noreferrer"
        title={datos.links.repo.title}>
        <span>{datos.links.repo.title}</span>
        <Icon name="mdi:github" class="size-6" />
      </a>
    </div>
  </section>
</footer>
