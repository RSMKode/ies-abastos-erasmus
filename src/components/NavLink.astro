---
import { Icon } from 'astro-icon/components';

interface Props {
  nombre: string;
  link: string;
  icono: string;
}

const { nombre, link, icono } = Astro.props;

const isActive = Astro.url.pathname === link;
---

<a
  class={'flex items-start justify-center border border-transparent hover:text-accent hover:border-current font-medium px-2 py-1 rounded-lg gap-1 hover:scale-[1.05] active:scale-[1] transition duration-300 hover:shadow-current ' +
    (isActive ? 'text-accent' : '')}
  href={link}
  title={nombre}>
  <Icon name={icono} size={20} class="" />
  <span class="hidden sm:flex">{nombre}</span>
</a>
