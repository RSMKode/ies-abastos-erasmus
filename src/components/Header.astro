---
import NavLink from '@/components/NavLink.astro';
import ThemeSwitch from '@/components/ThemeSwitch.astro';
import Navigation from './Navigation.astro';
import CustomSeparator from './CustomSeparator.astro';
import { Icon } from 'astro-icon/components';
import datos from '@/data/data.json';
---

<header
  class="px-6 py-4 w-full flex flex-col gap-2 max-w-7xl bg-opacity-70 sticky top-0 left-0 z-10 backdrop-blur-lg">
  <div class="flex justify-between items-center">
    <a href="/" class="inline-flex gap-2 text-3xl font-bold group items-center">
      <Icon
        name="logo"
        size={40}
        class="text-accent group-hover:scale-110 transition-all duration-300"
      />
      <h1
        class="hover:text-accent transition border-b-2 border-transparent duration-300 hover:border-accent">
        <span class="hidden sm:inline">{datos.textContent.header.title}</span>
        <!-- ? Para que salga la E+
        E<span class="hidden sm:inline">rasmus</span>+ -->
      </h1>
    </a>
    <Navigation />
  </div>
</header>
<CustomSeparator class="text-accent max-w-7xl" />
