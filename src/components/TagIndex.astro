---
const allPosts = await Astro.glob("/src/pages/posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

const title = "√çndice de etiquetas";
---

<h2>{title}</h2>
<section class="tag-container">
  {
    tags.map((tag) => (
      <a class="tag" href={`/tags/${tag}`}>
        {tag}
      </a>
    ))
  }
</section>
