---
import {
  projects as projectsData,
  tags as tagsData,
} from '@/data/tags-data.json';
import TagCard from './TagCard.astro';
import type { CollectionEntry } from 'astro:content';

const { tags, class: className } = Astro.props;
---

<section class={'grid gap-4 grid-cols-auto-fit-sm ' + className}>
  {
    tags.map((tag, index) => {
      let animationDelay = index * 100;
      const { slug, data } = tag;
      const { name, type, imageUrl } = data;

      return (
        <TagCard
          name={name}
          linkUrl={`/categories/${slug}`}
          imageUrl={imageUrl}
          class={`animate-fade-in-up`}
          style={`animation-delay: ${animationDelay}ms`}
        />
      );
    })
  }
</section>
