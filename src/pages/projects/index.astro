---
import TagIndex from "@/components/TagIndex.astro";
import Layout from "@/layouts/Layout.astro";
const allPosts = await Astro.glob("/src/pages/posts/**/*.md");
const projects = [
  ...new Set(allPosts.map((post) => post.frontmatter.project).flat()),
];

const pageTitle = "Índice de tipos de proyectos Erasmus+";
const pageDescription =
  "Índice de tipos de proyectos Erasmus+ de los artículos del blog";
---

<Layout pageTitle={pageTitle} pageDescription={pageDescription}>
  <TagIndex tags={projects} isProjectIndex={true}/>

</Layout>
