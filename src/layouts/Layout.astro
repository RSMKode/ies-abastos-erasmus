---
import { ViewTransitions } from 'astro:transitions';

import '@fontsource-variable/onest';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

interface Props {
  pageTitle: string;
  pageDescription?: string;
  showTitle?: boolean;
  isContentPage?: boolean;
}

const { pageTitle, pageDescription, isContentPage } = Astro.props;
const showTitle = Astro.props.showTitle ?? true;

const mainClass = isContentPage
  ? 'flex flex-col gap-6 w-full max-w-4xl p-6'
  : 'flex flex-col gap-6 w-full max-w-7xl p-6';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    {pageDescription && <meta name="description" content={pageDescription} />}
    <ViewTransitions />
    <script
      defer
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script defer>
      if (netlifyIdentity) {
        netlifyIdentity.on('init', user => {
          if (!user) {
            netlifyIdentity.on('login', () => {
              document.location.href = '/admin/';
            });
          }
        });
      }
      // console.log(localStorage);
    </script>
  </head>

  <body>
    <Header />
    <main class={mainClass}>
      {
        showTitle && (
          <h1 class="text-3xl text-accent font-bold" transition:animate="slide">
            {pageTitle}
          </h1>
        )
      }
      <slot />
    </main>
    <Footer />
  </body>
</html>
