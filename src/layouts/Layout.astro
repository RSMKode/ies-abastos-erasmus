---
import { ViewTransitions } from "astro:transitions";

import "@fontsource-variable/onest";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";

interface Props {
  pageTitle: string;
  pageDescription?: string;
}

const { pageTitle, pageDescription } = Astro.props;

// console.log(Astro.request);
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    {pageDescription && <meta name="description" content={pageDescription} />}
  </head>
  <ViewTransitions />
  <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"
  ></script>
  <script defer>
    if (netlifyIdentity) {
      netlifyIdentity.on("init", (user) => {
        if (!user) {
          netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
    console.log(localStorage);
  </script>

  <body>
    <Header />
    <main class="flex flex-col gap-4 w-full max-w-7xl p-6">
      <h1 class="text-3xl text-accent-1 font-bold" transition:animate="slide">{pageTitle}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>
